[alias]
	s = status -s
	lg = log --oneline --decorate --all --graph
	d = diff --stat
	tags = for-each-ref --sort=taggerdate --format '%(refname) %(taggerdate)' refs/tags
	diff = diff --color-moved
[push]
	default = simple
[credential]
	helper = osxkeychain
[user]
	name = shane
	email = contact@shane.gg
	signingkey = 94D41DFC6D43CE9C  # get from `gpg --list-keys  --with-colons`
[commit]
	gpgSign = true
[gpg]
	program = gpg2
[diff "gpg"]
	textconv = gpg2 --no-tty --decrypt
	cachetextconv = false
[diff "ansible-vault"]
	textconv = ansible-vault view
	cachetextconv = false
[core]
	editor = vim
[diff]
	colorMoved = plain
